{
    "compilerOptions": {
        "types": [
            "node",
            "vite/client"
        ],
        "target": "ESNext",
        "useDefineForClassFields": true,
        "declaration": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "@/components/*": [
                "resources/ts/components/*"
            ],
            "@/functions/*": [
                "resources/ts/functions/*"
            ],
            "@/api/*": [
                "resources/ts/api/*"
            ],
            "@/modules/*": [
                "resources/ts/modules/*"
            ],
            "@/elements/*": [
                "resources/ts/elements/*"
            ]
        }
    },
    "include": [
        "./resources/ts/**/*",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "public/build"
    ]
}
