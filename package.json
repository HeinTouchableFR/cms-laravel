{
    "private": true,
    "scripts": {
        "dev": "npm-run-all --parallel watch dev:vite",
        "copy": "npm-run-all --parallel copy:*",
        "copy:assets": "copyfiles -u 4 \"./storage/app/public/themes/default/assets/fonts/*\" \"./storage/app/public/themes/default\"",
        "dev:vite": "npx vite --host",
        "build": "npx vite build",
        "build-theme": "npm-run-all build:*",
        "build:vite": "npx vite build",
        "build:sass": "sass --no-source-map storage/app/public/themes/**/sass:storage/app/public/themes/**/css",
        "watch": "npm-run-all --parallel watch:*",
        "watch:sass": "sass --watch --no-source-map storage/app/public/themes/default/sass:storage/app/public/themes/default/css",
        "postbuild": "postcss storage/app/public/themes/default/css/*.css -u autoprefixer cssnano -r --no-map",
        "format": "prettier --config .prettierrc 'resources/ts/**/*.{ts,tsx}' --write"
    },
    "devDependencies": {
        "@types/node": "^18.16.3",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.1",
        "@vitejs/plugin-react": "^4.0.0",
        "autoprefixer": "^10.4.2",
        "axios": "^1.1.2",
        "babel-plugin-jsx-pragmatic": "^1.0.2",
        "copyfiles": "^2.4.1",
        "cssnano": "^5.1.15",
        "doctoc": "^2.0.1",
        "laravel-vite-plugin": "^0.7.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.1",
        "postcss-cli": "^10.1.0",
        "sass": "^1.32.4",
        "tsc-alias": "^1.8.2",
        "typescript": "^5.0.4",
        "vite": "^4.0.0"
    },
    "dependencies": {
        "@grafikart/drop-files-element": "^1.0.9",
        "@heintouchable/filemanager": "^0.0.6",
        "body-scroll-lock": "^3.1.5",
        "favicon-badge": "^2.0.0",
        "htm": "^3.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "scriptjs": "^2.5.9",
        "turbolinks": "^5.2.0"
    }
}
